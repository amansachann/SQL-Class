<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Example App</title>
    <%- include('partials/head.ejs') %>
  </head>
  <body>
   <%- include('partials/navbar') %>

    <!-- Content -->
     <section class="my-4 py-4">
      <div class="container">
        <table class="table table-striped table-hover table-light">
          <thead>
            <tr class="table-dark">
              <th scope="col">S.No.</th>
              <% Object.keys(result[0]).map((key)=> { %>
              <th scope="col"><%= key %></th>
              <% }) %>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Using for loop -->
            <% for(let i=0; i<result.length; i++) {%>
            <tr>
              <td><%= i+1 %></td>
              <td><%= result[i]["id"] %></td>
              <td><%= result[i]["username"] %></td>
              <td><%= result[i]["email"] %></td>
              <td>
              <form method="get" class="button-form" action="/user/<%= result[i]["id"] %>/edit">
                <button class="btn btn-success px-3 me-2">Edit User</button>
              </form>
              <form method="get" class="button-form" action="/user/<%= result[i]["id"] %>">
                <button class="btn btn-danger px-3">Delete</button>
              </form>
              </td>
            </tr>
            <% } %>

            <!-- Using Map Method -->
            <!-- <% result.map((entry)=>{ %>
              <tr>
                <td><%= entry["id"] %></td>
              <td><%= entry["username"] %></td>
              <td><%= entry["email"] %></td>
              </tr>
            <% }) %> -->
          </tbody>
        </table>
        
      </div>
     </section>
    <!-- Content ends -->
    <%- include('partials/footer') %>
  </body>
</html>
